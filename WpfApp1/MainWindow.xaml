        <TextBlock x:Name="AlphabetBox1" Margin="10,10,10,0" TextWrapping="Wrap" Text="A B C D E F G H I J K L M" VerticalAlignment="Top" Height="55" FontSize="50" FontFamily="Global Monospace" FontWeight="Bold" Grid.IsSharedSizeScope="True" Foreground="White"/>
        <TextBlock x:Name="AlphabetBox2" Margin="10,130,0,0" TextWrapping="Wrap" Text="N O P Q R S T U W X Y Z" VerticalAlignment="Top" Height="55" FontFamily="Global Monospace" FontWeight="Bold" Grid.IsSharedSizeScope="True" HorizontalAlignment="Left" Width="772" FontSize="50"/>
        <TextBlock x:Name="CommandBox1" Margin="10,70,10,0" TextWrapping="Wrap" Text="Generowane 1" VerticalAlignment="Top" Height="55" FontSize="50" FontFamily="Global Monospace" FontWeight="Bold" Grid.IsSharedSizeScope="True" Foreground="#FF365AFF"/>
        <TextBlock x:Name="CommandBox2" Margin="10,190,10,0" TextWrapping="Wrap" Text="Generowane 2" VerticalAlignment="Top" Height="55" FontSize="50" FontFamily="Global Monospace" FontWeight="Bold" Grid.IsSharedSizeScope="True" Foreground="#FF365AFF"/>

    </Grid>
</Window>
